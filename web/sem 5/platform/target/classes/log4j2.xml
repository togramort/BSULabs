<Configuration>
    <Appenders>
        <File name="LogToFile" fileName="logs/app.log">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %logger{36} [%t] %c{1} - %msg%n"/>
        </File>
        <Console name="Console">
            <PatternLayout pattern="%msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="LogToFile"/>
        </Root>
        <Logger name="SyncObjectsVersion" level="debug" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="WaitNotifyVersion" level="debug" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>